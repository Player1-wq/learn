string yourName = "Pavel";
string friedName = "Ivan";
Console.WriteLine("До изменения: Вас зовут = {0}, Вашего друга = {1}", yourName, friedName);

var name = yourName;

yourName = friedName;
friedName = name;
Console.WriteLine("После изменения: Вас зовут = {0}, Вашего друга = {1}", yourName, friedName);
