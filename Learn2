int timeReceptionHumanInMinutes = 10;
Console.WriteLine("Как много людей в очереди перед Вами?");
int people = int.Parse(Console.ReadLine());
int minutesInHour = 60;
int waitHours = people * timeReceptionHumanInMinutes / minutesInHour;
int waitMinutes = people * timeReceptionHumanInMinutes % minutesInHour;
Console.WriteLine("Вам надо будет  подождать {0} часов {1} минут", waitHours, waitMinutes);
