Console.WriteLine("Сколько золота у Вас есть?");
int gold = int.Parse(Console.ReadLine());

int priceCristal = 10;
Console.WriteLine("Один кристал стоит {0} золота. Сколько кристалов Вы хотите купить?", priceCristal);
int crystals = int.Parse(Console.ReadLine());

int remainderGold = gold - crystals*priceCristal;

Console.WriteLine("Вы получите {0} кристалов, у Вас останется {1} золота.", crystals, remainderGold);
