Console.WriteLine("Сколько золота у Вас есть?");
int gold = int.Parse(Console.ReadLine());

int priceCristal = 10;
Console.WriteLine("Один кристал стоит {0} золота. Сколько кристалов Вы хотите купить?", priceCristal);
int byeCristal = int.Parse(Console.ReadLine());

int countCrystal = byeCristal;
int remainderGold = gold - byeCristal*priceCristal;

Console.WriteLine("Вы получите {0} кристалов, у Вас останется {1} золота.", countCrystal, remainderGold);
